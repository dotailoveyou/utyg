import pygame

pygame.init()
win = pygame.display.set_mode((800, 800))

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            exit()

    win.fill((255, 0, 225))
    pygame.draw.line(win,(160, 82, 45),(0,50),(315,50),6)
    pygame.draw.line(win,(160, 82, 45),(380,50),(450,50),6)
    pygame.draw.line(win,(160, 82, 45),(600,0),(600,50),6)
    pygame.draw.line(win,(160, 82, 45),(515,50),(585,50),6)
    pygame.draw.line(win,(160, 82, 45),(600,75),(800,75),6)
    pygame.draw.line(win,(160, 82, 45),(315,50),(315,125),6)
    pygame.draw.line(win,(160, 82, 45),(0,125),(315,125,),6)
    pygame.draw.line(win,(160, 82, 45),(450,50),(450,600),6)
    pygame.draw.line(win, (160, 82, 45),(380,50),(380,600),6)
    pygame.draw.line(win, (160, 82, 45), (50,150),(315,150),6)
    pygame.draw.line(win, (160, 82, 45), (50,150),(50,600),6)
    pygame.draw.line(win, (160, 82, 45), (50,600),(315,600),6)
    pygame.draw.line(win, (160, 82, 45),(315,600),(315,100),6)
    pygame.draw.line(win, (160, 82, 45),(515,50),(515,550),6)
    pygame.draw.line(win, (160, 82, 45), (585,50),(585,150),6)
    pygame.draw.line(win, (160, 82, 45), (585,150),(605,150),6)

    pygame.time.delay(10)
    pygame.display.update()
